<Window x:Class="QuanLyThuVien.CompensationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyThuVien"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:QuanLyThuVien.UserControlMain"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Black"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="1000"
        x:Name="compensation"
        Title="Lập phiếu bồi thường">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarView Tag="{Binding Title, ElementName=compensation}"></uc:ControlBarView>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5">
                <materialDesign:Card>
                    <TextBlock
                        Margin="5"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        Text="Phiếu Bồi thường" />
                </materialDesign:Card>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <materialDesign:Card>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <materialDesign:Card 
                            Grid.Row="0"
                            Margin="5">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <TextBlock
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="ID phiếu mượn: "/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <TextBlock
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <TextBlock
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="Người lập phiếu: "/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <TextBlock
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="{Binding Staff.HoVaTen, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="Ngày lập phiếu: "/>
                                    </Grid>


                                    <Grid Grid.Column="2">
                                        <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="{Binding Date, StringFormat='dd/MM/yyyy', UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card 
                            Grid.Row="1"
                            Margin="5">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <materialDesign:Card Grid.Row="0" Margin="0 0 0 5">
                                    <TextBlock
                                        Margin="5"
                                        FontSize="20"
                                        Text="Chi tiết:" />
                                </materialDesign:Card>

                                <materialDesign:Card Grid.Row="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Margin="0 0 0 10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <TextBlock
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Khách hàng: "/>
                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Margin="5 "
                                                    Text="{Binding Customer.HoVaTen, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="20"
                                                    materialDesign:HintAssist.Hint="Khách hàng"/>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0 0 0 10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Margin="0 0 0 10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Sách 1: "/>

                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    FontSize="20"
                                                    Text="{Binding Book1.TenSach, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="Sách"/>

                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Tiền bồi thường: "/>

                                                <TextBox
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Price1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    Margin="5"
                                                    FontSize="20"
                                                    materialDesign:HintAssist.Hint="{Binding Rest, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="3" Margin="0 0 0 10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Sách 3: "/>

                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    FontSize="20"
                                                    Text="{Binding Book3.TenSach, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="Sách"/>

                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Tiền bồi thường: "/>

                                                <TextBox
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Price3, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    Margin="5"
                                                    FontSize="20"/>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="2" Margin="0 0 0 10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Margin="0 0 0 10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Sách 2: "/>

                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    FontSize="20"
                                                    Text="{Binding Book2.TenSach, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="Sách"/>

                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="Tiền bồi thường: "/>

                                                <TextBox
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Price2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    Margin="5"
                                                    FontSize="20"/>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="4" Margin="0 0 0 10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <TextBlock
                                                    Margin="5"
                                                    FontSize="20"
                                                    VerticalAlignment="Center"
                                                    Text="Tổng tiền: "/>
                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <TextBlock
                                                    Margin="5"
                                                    FontSize="20"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}"/>
                                            </Grid>
                                        </Grid>

                                        <Grid 
                                            Margin="0 0 0 10"
                                            Grid.Row="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Button
                                                Grid.Column="4"
                                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                Height="40"
                                                IsDefault="True"
                                                Content="_Lưu"
                                                Background="#FF1A88CE"
                                                Width="160"
                                                FontSize="20"
                                                Command="{Binding SaveCommand}"
                                                CommandParameter="{Binding ElementName=compensation}"/>
                                            <Button
                                                Grid.Column="3"
                                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                Height="40"
                                                Content="_Huỷ"
                                                Command="{Binding CancelCommand}"
                                                CommandParameter="{Binding ElementName=compensation}"
                                                Background="#FF1A88CE"
                                                Width="160"
                                                FontSize="20" />
                                        </Grid>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                        </materialDesign:Card>

                    </Grid>

                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>
